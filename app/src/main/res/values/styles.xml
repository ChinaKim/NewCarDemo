<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme">
    </style>
    <style name="Base.AppTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="background">
        <item name="android:background">#FF666666</item>
    </style>

    <style name="mainFront">
        <item name="android:textSize">@dimen/x15</item>
        <item name="android:textColor">@color/gray</item>
    </style>


    <!-- 小的绿色按钮 -->
    <style name="sgreenbtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_out_login</item>
        <item name="android:textSize">@dimen/x15</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:gravity">center</item>
    </style>


    <!--分享弹出框-->
    <style name="myStyle" parent="android:Animation">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="transport_font">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white_text</item>
    </style>

</resources>
